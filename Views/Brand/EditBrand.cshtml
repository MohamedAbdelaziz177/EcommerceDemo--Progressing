@model E_Commerce.Models.Brand

@{
    ViewData["Title"] = "EditBrand";
}

<h4>EditBrand</h4>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="BrandId" class="control-label"></label>
                <input asp-for="BrandId" class="form-control" readonly />
                <span asp-validation-for="BrandId" class="text-danger"></span>
            </div>

            <br>

             <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input class="form-control" asp-for="Name"></input>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <br>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

            <br>


        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllBrands">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
