@model E_Commerce.Models.Category

@{
    ViewData["Title"] = "EditCategory";
}





<div class="text-center" style="padding-left: 600px">
    <div class="row">
        <div class="col-md-4">

            <form asp-action="SaveEdit">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <input asp-for="CategoryId" class="form-control" readonly />
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <br>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control"></input>

                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <br>


                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"> </textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <br>


                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>

            </form>
            <br>
            <a class="btn btn-primary text-center" asp-action="GetAllCategories">Back to List</a>
        </div>
    </div>

    <div>
        
    </div>

   

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}