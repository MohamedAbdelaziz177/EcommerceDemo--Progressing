@using E_Commerce.ViewModels

@model List<ProductDetailsVM> 

@{
    ViewData["Title"] = "Product Index";
}

<style>
    .background-banner {
        background: url('https://www.kindpng.com/picc/m/247-2474628_electronics-items-png-facebook-shop-cover-design-transparent.png') no-repeat center center;
        background-size: cover;
        width: 100%;
        height: 600px;
        position: relative;
        filter: grayscale(100%)
         /* Makes the image black and white */
    }

        .background-banner .banner-overlay {
            background: rgba(1, 0, 0, 0.1); /* Dark overlay for better text visibility */
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .background-banner h2 {
            color: white;
            font-size: 3rem;
            text-shadow: 2px 2px 5px black;
            margin: 0;
        }

        h2:hover {
            
            transition: transform 0.5s ease-in-out;
            transform: scale(1.1);
        }


</style>


<div class="background-banner" >
    <div class="banner-overlay" >
        <h2 style="color: white; font-size: 3rem; text-shadow: 2px 2px 5px black;" for="container">Explore Our Products<br></h2>

        
        
    </div>
</div>

<br><br>


<div class="container" id="container">

   
  
    <div class="row">
        @foreach (var product in Model)
        {
           <partial name="ProductCardPartia" model="product"></partial>
        }
    </div>
</div>